{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "description": "TPV Grupo Manhattan - Aplicación de punto de venta",
  "author": "Adrián Belarte <adrian.belarte.ir@gmail.com>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "tailwind:init": "tailwindcss init -p",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron electron/main.js",
    "clean": "rimraf dist dist_electron",
    "dist": "npm run clean && npm run build && electron-builder",
    "verify-build": "node scripts/verify-build.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "escpos": "^3.0.0-alpha.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.0",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "vite": "^7.0.5"
  },
"build": {
  "appId": "com.grupomanhattan.tpv",
  "productName": "TPV Grupo Manhattan",
  "directories": { "output": "dist_electron" },
  "files": [
    "electron/**/*",
    "package.json"
  ],
  "extraResources": [
    { "from": "dist", "to": "app/dist", "filter": ["**/*"] },
    { "from": "../backend", "to": "backend", "filter": ["**/*"] },
    { "from": "../backend/node_modules", "to": "backend/node_modules", "filter": ["**/*"] }
  ],
  "asarUnpack": [
    "app/dist/**/*",
    "backend/**/*"
  ],
  "asar": true,
  "win": {
    "target": "nsis",
    "icon": "electron/assets/manhattan.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
}
