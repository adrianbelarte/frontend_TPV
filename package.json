{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "description": "TPV Grupo Manhattan - Aplicación de punto de venta",
  "author": "Adrián Belarte <adrian.belarte.ir@gmail.com>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "tailwind:init": "tailwindcss init -p",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron electron/main.js",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "escpos": "^3.0.0-alpha.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.0",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.5"
  },
  "build": {
    "appId": "com.grupomanhattan.tpv",
    "productName": "TPV Grupo Manhattan",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "../backend/**/*",
      "electron/main.js",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "electron/assets/manhattan.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
